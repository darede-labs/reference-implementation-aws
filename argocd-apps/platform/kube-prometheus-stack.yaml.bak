apiVersion: argoproj.io/v1alpha1
kind: Application
metadata:
  name: kube-prometheus-stack
  namespace: argocd
  annotations:
    argocd.argoproj.io/sync-wave: "2"
spec:
  project: default
  source:
    chart: kube-prometheus-stack
    repoURL: https://prometheus-community.github.io/helm-charts
    targetRevision: 55.5.0
    helm:
      valuesObject:
        prometheus:
          enabled: true
          prometheusSpec:
            retention: 15d
            # Prefer Karpenter nodes over bootstrap nodes
            affinity:
              nodeAffinity:
                preferredDuringSchedulingIgnoredDuringExecution:
                  # Prefer nodes provisioned by Karpenter
                  - weight: 100
                    preference:
                      matchExpressions:
                        - key: karpenter.sh/capacity-type
                          operator: Exists
                  # Avoid bootstrap nodes if possible
                  - weight: 50
                    preference:
                      matchExpressions:
                        - key: role
                          operator: NotIn
                          values:
                            - karpenter-bootstrap
            resources:
              requests:
                cpu: 200m
                memory: 512Mi
              limits:
                memory: 2Gi
            storageSpec:
              volumeClaimTemplate:
                spec:
                  storageClassName: gp2
                  accessModes: ["ReadWriteOnce"]
                  resources:
                    requests:
                      storage: 10Gi
        grafana:
          enabled: true
          adminPassword: changeme
          # Prefer Karpenter nodes over bootstrap nodes
          affinity:
            nodeAffinity:
              preferredDuringSchedulingIgnoredDuringExecution:
                # Prefer nodes provisioned by Karpenter
                - weight: 100
                  preference:
                    matchExpressions:
                      - key: karpenter.sh/capacity-type
                        operator: Exists
                # Avoid bootstrap nodes if possible
                - weight: 50
                  preference:
                    matchExpressions:
                      - key: role
                        operator: NotIn
                        values:
                          - karpenter-bootstrap
          ingress:
            enabled: true
            ingressClassName: nginx
            annotations:
              external-dns.alpha.kubernetes.io/hostname: grafana.timedevops.click
            hosts:
              - grafana.timedevops.click
          additionalDataSources:
            - name: Loki
              type: loki
              url: http://loki-gateway.observability.svc.cluster.local:80
              access: proxy
              isDefault: false
          dashboardProviders:
            dashboardproviders.yaml:
              apiVersion: 1
              providers:
                - name: 'default'
                  orgId: 1
                  folder: ''
                  type: file
                  disableDeletion: false
                  editable: true
                  options:
                    path: /var/lib/grafana/dashboards/default
          dashboards:
            default:
              service-overview:
                gnetId: 15757
                revision: 13
                datasource: Prometheus
        alertmanager:
          enabled: false
        nodeExporter:
          enabled: true
          # Avoid bootstrap nodes (they have limited capacity)
          affinity:
            nodeAffinity:
              requiredDuringSchedulingIgnoredDuringExecution:
                nodeSelectorTerms:
                  - matchExpressions:
                      - key: role
                        operator: NotIn
                        values:
                          - karpenter-bootstrap
        kubeStateMetrics:
          enabled: true
        prometheusOperator:
          enabled: true
  destination:
    server: https://kubernetes.default.svc
    namespace: observability
  syncPolicy:
    automated:
      prune: true
      selfHeal: true
    syncOptions:
      - CreateNamespace=true
      - ServerSideApply=true
    retry:
      limit: 5
      backoff:
        duration: 5s
        factor: 2
        maxDuration: 3m
